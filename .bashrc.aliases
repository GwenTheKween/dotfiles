alias nextdoc='nvim ~/Documents/journal/$(date -d "next friday" +%Y_%m_%d)'

function link(){
    ln -s $PWD/"$1" "$2"
}

function cfg(){
    vim ~/."$1"
}

function motion_patch(){
    diff -u <(sed -n 's/^-//p' $1) <(sed -n 's/^\+//p' $1)
}

function update() {
    echo "running full system update"
    if [[ $DISTRO == "fedora" ]]; then
        sudo dnf update -y
    else
        echo "unknown distro"
        echo $distro
        return -1
    fi
    # Checks if flatpak binary exists
    which flatpak >/dev/null
    if [[ $? == 0 ]]; then
        sudo flatpak repair && sudo flatpak uninstall --unused && sudo flatpak upgrade
    fi
}

function rpmbuildlocal
{
  MAKEFLAGS= rpmbuild \
    --define "_topdir $PWD" \
    --define "_builddir $PWD" \
    --define "_rpmdir $PWD" \
    --define "_sourcedir $PWD" \
    --define "_specdir $PWD" \
    --define "_srcrpmdir $PWD" \
    --define "_build_name_fmt %%{NAME}-%%{VERSION}-%%{RELEASE}.%%{ARCH}.rpm" \
    "$@"; rmdir &>/dev/null BUILDROOT;
}
DISTRO=fedora
CLANG="CC_FOR_TARGET=clang CXX_FOR_TARGET=clang++"
